# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=60

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,xlsx